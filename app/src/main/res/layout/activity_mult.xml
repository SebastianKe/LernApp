<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lernapp.MultActivity">
    // Erstellung sämtlicher UI-Elemente
    <TextView
        android:id="@+id/textAufgabe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Berechnen Sie:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateresults"
        android:tag="A_Mult"
        android:text="Ergebnis prüfen"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Operand9" />

    <EditText
        android:id="@+id/Operand1"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/textAufgabe1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/Operand2"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/textAufgabe1"
        app:layout_constraintRight_toLeftOf="@+id/Result1"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/Operator1"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_marginTop="29dp"
        android:text="X"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textAufgabe1"
        app:layout_constraintLeft_toRightOf="@+id/Operand1"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/Operand2"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/Result1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Ergebnis"
        android:inputType="number"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/Operand2" />

    <EditText
        android:id="@+id/Operand3"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Operand1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/Operator2"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:text="X"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Operator1"
        app:layout_constraintRight_toLeftOf="@+id/Operand4"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="@+id/Operand3"
        android:layout_marginLeft="16dp" />

    <EditText
        android:id="@+id/Operand4"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/Operand2"
        app:layout_constraintRight_toLeftOf="@+id/Result2"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/Result2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Ergebnis"
        android:inputType="number"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/Operand4" />

    <EditText
        android:id="@+id/Operand5"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Operand3" />

    <TextView
        android:id="@+id/Operator3"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_marginTop="46dp"
        android:text="X"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/Operator2"
        app:layout_constraintLeft_toRightOf="@+id/Operand5"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/Operand6"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/Operand6"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Operand4"
        app:layout_constraintRight_toLeftOf="@+id/Result3"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/Result3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Ergebnis"
        android:inputType="number"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/Operand6" />

    <EditText
        android:id="@+id/Operand7"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Operand5" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:text="X"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/Operand7"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/Operand8"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Operator3"
        app:layout_constraintHorizontal_bias="0.504" />

    <EditText
        android:id="@+id/Operand8"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Operand6"
        app:layout_constraintRight_toLeftOf="@+id/Result4"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/Result4"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Ergebnis"
        android:inputType="number"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/Operand8" />

    <EditText
        android:id="@+id/Operand9"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Operand7" />

    <TextView
        android:id="@+id/Operator5"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:text="X"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/Operand9"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/Operand10"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/Operand10"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@+id/Result5"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Operand8" />

    <EditText
        android:id="@+id/Result5"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Ergebnis"
        android:inputType="number"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/Operand10" />

</android.support.constraint.ConstraintLayout>
